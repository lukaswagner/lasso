head
    title lasso demo

body
    canvas#canvas
    //- div#grid
    div#ui
        div#move(title='move camera')
            i.text-light.fas.fa-arrows
        div#circle(title='lasso select')
            i.text-light.fas.fa-regular.fa-circle
        div#box(title='box select')
            i.text-light.fas.fa-regular.fa-square
        div#reset(title='reset selection')
            i.text-light.fas.fa-regular.fa-trash-can
        div#undo(title='undo')
            i.text-light.fas.fa-rotate-left
        div#redo(title='redo')
            i.text-light.fas.fa-rotate-right
        div#plus(title='add to selection')
            i.text-light.fas.fa-plus
        div#minus(title='remove from selection')
            i.text-light.fas.fa-minus
